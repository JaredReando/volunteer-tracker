<% if @edit==true%>
<h1>Edit <%= @project.title %></h1>
<form class="" action="/projects/<%= @project.id %>" method="post">
  Title: <input type="text" name="title" value="<%= @project.title %>">
  <button type="submit">Update Project</button>
</form>
<form action="/projects/<%= @project.id %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">
<button type="submit">Delete Project</button>
</form>
<% else %>
<h1><%= @project.title %></h1>
<a href="/projects/<%= @project.id %>/edit">Edit Project</a>
<% end %>

<br><br>
<h3>Add Volunteers:</h3>
<form action="/volunteers/add" method="post">
<input name="project_id" type="hidden" value="<%= @project.id %>">
  Name:<input type="text" name="name">
  <button type="submit" name="button">Add Volunteer</button>
</form>
<% if @volunteers.any? %>
  <br><br>
  <h3>Volunteer Pool:</h3>
    <ul>
    <% @volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id %>/edit"><%= volunteer.name %></a></li>
    <% end %>
  <% else %>
  <h2>No volunteers yet. Get recruiting!</h2>
  <% end %>
