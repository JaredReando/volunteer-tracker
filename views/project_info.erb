
<% if @edit==true%>
  <a href="/projects/<%= @project.id %>"><< Back</a>
  <div class="jumbotron text-center">
    <h3>[Edit]</h3>
    <h1><%= @project.title %></h1>
    <form action="/projects/<%= @project.id %>/edit" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-danger">Delete Project</button>
    </form>
  </div>

  <div class="row">
    <div class="text-center col-md-12 well">
      <form class="" action="/projects/<%= @project.id %>" method="post">
        <label><h4>Title</h4></label>
        <input type="text" name="title" pattern="^[a-zA-Z\s]*$" title="Input only alllows letters and spaces." placeholder="<%= @project.title %>">
        <button type="submit" class="btn btn-success">Update Project</button>
      </form>
    </div>
  </div>
<% else %>
  <a href="/"><< Back</a>
  <div class="jumbotron text-center">
    <h1><%= @project.title %></h1>
    <h3><a href="/projects/<%= @project.id %>/edit">Edit Project</a></h3>
  </div>

  <div class="row">
    <div class="col-md-6 well">
      <h3 class="text-lfet">Add Volunteers:</h3>
      <form action="/volunteers/add" method="post">
        <input name="project_id" type="hidden" value="<%= @project.id %>">
        Name:<input type="text" name="name" pattern="^[a-zA-Z\s]*$" title="Input only alllows letters and spaces.">
        <button type="submit" class="btn btn-success" name="button">Add Volunteer</button>
      </form>
    </div>
    <div class="col-md-6 well">
      <% if @project_volunteers.any? %>
      <h3 class="text-left">Volunteer Pool:</h3>
      <ul>
        <% @project_volunteers.each do |volunteer| %>
        <li><h4><a href="/volunteers/<%= volunteer.id %>/edit"><%= volunteer.name %></a></h4></li>
        <% end %>
        <% else %>
        <h2>No volunteers yet. Get recruiting!</h2>
        <% end %>

    </div>

  </div>
<% end %>
